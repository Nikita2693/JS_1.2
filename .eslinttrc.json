{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [ 
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "editor.formatOnSave": true
    },
    "eslint.validate": [
        "javascript"
    ]
}